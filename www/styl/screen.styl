@import colors
@import prefixes
@import 'components/triangle'
MediaMobile = "screen and (max-width: 740px)"
@import template

.ig
  display inline-block
  .feed
    width 50%
    float left
    text-align left
    max-width 560px
    &.left
      border-right 1px dashed #c
    &.right
      padding-left 8px
    ul.selector
      list-style none
      margin 0 0 0 -3px
      padding 0
      li
        float left
        border 1px solid ColorGreyBorder
        border-radius 2px
        padding 1px 5px
        margin 3px 5px
        a
          color #3
          text-decoration none
        &.active
          background ColorGreyText
          a
            color white
    .content
      margin-top 10px
      float left
      width 100%
      .fb-post
        margin-top 15px
      > .more
        margin-top 15px
        display block
        max-width 550px
        border 1px solid #d
        padding 10px 0
        text-align center
        width 100%
        border-radius 3px
        color ColorBlue
        &:hover
          text-decoration none
