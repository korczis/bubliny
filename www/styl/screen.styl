@import colors
@import prefixes
@import 'components/triangle'
MediaMobile = "screen and (max-width: 740px)"
@import template
p.methodology
  font-style italic
.ig
  display inline-block
  .feed
    width 50%
    float left
    text-align left
    max-width 560px
    &.right
      padding-left 8px
    ul.selector
      list-style none
      margin 0 0 0 -3px
      padding 0
      li
        float left
        border 1px solid rgba(ColorBlue, 70%)
        border-radius 2px
        padding 1px 5px
        margin 3px 5px
        a
          color darken(desaturate(ColorBlue, 60%), 40%)
          text-decoration none
        &:hover
          background lighten(ColorBlue, 94%)
        &:active
          background lighten(ColorBlue, 10%)
          a
            color white
        &.active
          background ColorBlue
          a
            color white
#feed
  margin-bottom 40px
  .feed.left
    border-right 1px dashed #c
  .content
    margin-top 10px
    float left
    width 100%
    .fb-post
      margin-top 15px
    > .more
      margin-top 15px
      display block
      max-width 550px
      border 1px solid #d
      padding 10px 0
      text-align center
      width 100%
      border-radius 3px
      color ColorBlue
      &:hover
        text-decoration none

#pages
  .pages
    width 100%
    LineHeight = 26px
    .content
      position relative
      float left
      width 100%
      height (20 * LineHeight)
      margin-top 20px
      margin-bottom 20px
    .page
      clear left
      float left
      position absolute
      top 0
      border 1px solid ColorBlue
      height 14px
      transition top 0.4s, width 0.4s
      .label
        position absolute
        white-space nowrap
        top -3px
        font-size 14px
    &.left
      margin-right 40px
      .page
        text-align right
        right 0
        border-top-left-radius 2px
        border-bottom-left-radius 2px
        .label
          right 100%
          padding-right 10px
    &.right
      margin-left 40px
      .page
        left 0
        border-top-right-radius 2px
        border-bottom-right-radius 2px
        .label
          left 100%
          padding-left 10px
  svg
    position absolute
    margin-left 4px
    top 9px
    left 100%
    path
      fill none
      stroke rgba(ColorBlue, 20%)
