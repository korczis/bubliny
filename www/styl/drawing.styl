&
  position relative
  text-align center
  .tweet
    width 7px
    height 7px
    background ColorBlue
  .tag-tweets
    > div
      position absolute
      transition transform 0.4s
  .bar-charts
    float left
    display inline-block
    position relative
    .tag
      float left
      height 150px
      width 100px
      position relative
      h3
        position absolute
        top 130px
        left 10px
        right 10px
        width calc(100% - 20px)
        text-align center
        font-weight normal
        color black
        font-size 17px
        margin 0
        border-top 1px solid ColorGreyBorder
      .tag-area
        position absolute
        bottom 30px
        left 14px
        top 0
        width calc(100% - 28px)
