@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1
&
  position relative
  text-align center
  .tweet
    width 7px
    height 7px
    background ColorBlue
    animation fadeIn 0.8s

  .tag-tweets
    > div
      position absolute
      transition transform 0.8s
  .bar-charts
    @import barCharts
  .vertical-chart
    float left
    display inline-block
    position relative
    width 100%
  .intermezzo
    margin 60px 0
    float left
    width 100%
    .tweet
      display inline-block
      margin 0 6px
      vertical-align middle
